<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sthelper.sthelper"
    android:versionCode="1"
    android:versionName="st" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <activity
            android:name=".business.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".business.auth.LoginAction"
            android:label="@string/title_activity_login_action"
            android:screenOrientation="portrait"
            android:theme="@style/actionTheme" />
        <activity
            android:name=".business.auth.RegisterAction"
            android:label="@string/title_activity_register_action"
            android:screenOrientation="portrait"
            android:theme="@style/actionTheme" />
    </application>

</manifest>
