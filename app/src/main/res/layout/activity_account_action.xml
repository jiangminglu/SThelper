<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_default_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/account_bg"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/default_avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="张三"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天吃得好高兴"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="210dp"

        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/app_default_line_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/edit_userinfo_icon"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="管理配送地址"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/app_default_line_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="28dp"
                android:background="@mipmap/bundle_tel_icon"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:text="更换绑定手机"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/app_default_line_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="40dp"
            android:background="@color/app_default_line_bg" />

        <TextView
            android:id="@+id/callservice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="客户电话"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/app_default_line_bg" />

        <TextView
            android:id="@+id/checkupdate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="检查更新"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/app_default_line_bg" />

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="关于"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/app_default_line_bg" />

    </LinearLayout>
</RelativeLayout>
