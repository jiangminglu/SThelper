<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_default_bg"
    tools:context="com.sthelper.sthelper.business.food.FoodStoreListAction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/food_store_all_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合排序"
                android:textColor="#000000"
                android:textSize="14sp" />

            <View
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:layout_marginLeft="6dp"
                android:background="@mipmap/icon_down_arrow" />
        </LinearLayout>

        <View
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/app_default_line_bg" />

        <LinearLayout
            android:id="@+id/food_store_all_flavor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部口味"
                android:textColor="#000000"
                android:textSize="14sp" />

            <View
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:layout_marginLeft="6dp"
                android:background="@mipmap/icon_down_arrow" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:layout_marginTop="42dp"
        android:background="@color/app_default_line_bg" />

    <com.sthelper.sthelper.view.SListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:id="@+id/food_store_listview"
        android:layout_marginTop="44dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_default_actionbar_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@mipmap/icon_shoping_cart" />

            <TextView
                android:id="@+id/food_store_shoping_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="购物车"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#ffffff"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="27dp"
                android:background="@mipmap/icon_buy_order" />

            <TextView
                android:id="@+id/food_store_shoping_buy_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="已购食单"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
