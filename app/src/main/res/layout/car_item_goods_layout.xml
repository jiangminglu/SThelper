<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:paddingTop="5dp"
              android:padding="5dp"
              android:background="@color/app_default_bg"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >

        <CheckBox
            android:id="@+id/car_item_goods_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        >

        <ImageView
            android:id="@+id/car_item_goods_img"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/main_item_bg3"/>

        <TextView
            android:id="@+id/car_item_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/car_item_goods_img"
            android:text="sss"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/car_item_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="ss"
            android:textColor="@color/app_default_actionbar_bg"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/car_item_goods_del"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@mipmap/fav_delete_icon"
            />
    </LinearLayout>
</LinearLayout>