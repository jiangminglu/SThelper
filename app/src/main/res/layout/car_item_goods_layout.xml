<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:background="#ffffff"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal"
              android:padding="5dp"
              android:paddingTop="5dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >

        <CheckBox
            android:id="@+id/car_item_goods_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        >

        <ImageView
            android:id="@+id/car_item_goods_img"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/main_item_bg3"/>

        <TextView
            android:id="@+id/car_item_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/car_item_goods_img"
            android:text="sss"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_item_goods_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/car_item_goods_img"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/car_goods_add_img"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:background="@mipmap/car_goods_add_icon"
                />

            <TextView
                android:id="@+id/car_goods_item_num"
                android:layout_width="32dp"
                android:layout_height="22dp"
                android:background="@mipmap/car_goods_price_frame_icon"
                android:gravity="center"
                android:text="10"
                android:textColor="#000000"
                android:textSize="10dp"
                />

            <ImageView
                android:id="@+id/car_goods_del_img"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:background="@mipmap/car_goods_del_icon"
                />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/car_item_goods_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="ss"
            android:textColor="@color/app_default_actionbar_bg"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/car_item_goods_del"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@mipmap/fav_delete_icon"
            />
    </LinearLayout>
</LinearLayout>