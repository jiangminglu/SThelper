<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_default_bg"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fav_list_type1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fav_type"
            android:clickable="true"
            android:gravity="center"
            android:text="收藏的店铺"

            android:textColor="@color/app_default_actionbar_bg"
            android:textSize="16sp"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/app_default_line_bg"/>

        <TextView
            android:id="@+id/fav_list_type2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:clickable="true"
            android:gravity="center"
            android:text="收藏的商品"
            android:textColor="#a0a0a0"
            android:textSize="16sp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/fav_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
