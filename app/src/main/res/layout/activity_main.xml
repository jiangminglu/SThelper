<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginBottom="8.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_item_img1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_item_bg1" />

            <ImageView
                android:id="@+id/main_item_img2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8.0dip"
                android:layout_weight="1.0"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_item_bg2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_item_img3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_item_bg3" />

            <ImageView
                android:id="@+id/main_item_img4"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8.0dip"
                android:layout_weight="1.0"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_item_bg4" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.capricorn.ArcMenu
        android:id="@+id/main_item_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        arc:childSize="60.0dip"
        arc:fromDegrees="270.0"
        arc:toDegrees="400.0" />
</RelativeLayout>